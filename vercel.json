{
  "buildCommand": "npm install --legacy-peer-deps && npx ng build --output-path=dist/frontend/browser",
  "outputDirectory": "frontend/dist/frontend/browser",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://proyecto2-sensores-production.up.railway.app/:path*"
    },
    {
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ]
}
